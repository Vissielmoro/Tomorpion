<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PageDeJeu"
    android:background="@drawable/fond">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position_1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/position_4"
        android:layout_alignEnd="@+id/position_4"
        android:src="@drawable/imgblanc"
        android:paddingTop="90dp"
        android:paddingRight="30dp"
        android:visibility="visible"
        android:clickable="true"
        android:onClick="poserPion1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position_2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/imgblanc"
        android:paddingTop="90dp"
        android:paddingRight="30dp"
        android:clickable="true"
        android:onClick="poserPion2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position_3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/position_6"
        android:layout_alignEnd="@+id/position_6"
        android:src="@drawable/imgblanc"
        android:paddingTop="90dp"
        android:paddingRight="80dp"
        android:onClick="poserPion3"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position_4"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/position_5"
        android:layout_toStartOf="@+id/position_5"
        android:layout_marginRight="221dp"
        android:layout_marginEnd="221dp"
        android:src="@drawable/imgblanc"
        android:paddingTop="80dp"
        android:clickable="true"
        android:onClick="poserPion4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position_5"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/imgblanc"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="40dp"
        android:onClick="poserPion5"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position_6"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/imgblanc"
        android:paddingTop="20dp"
        android:paddingRight="60dp"
        android:clickable="true"
        android:onClick="poserPion6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position_7"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/position_4"
        android:layout_alignEnd="@+id/position_4"
        android:src="@drawable/imgblanc"
        android:paddingBottom="30dp"
        android:clickable="true"
        android:onClick="poserPion7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position_8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/imgblanc"
        android:paddingBottom="30dp"
        android:clickable="true"
        android:onClick="poserPion8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position_9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/imgblanc"
        android:paddingBottom="50dp"
        android:paddingRight="80dp"
        android:clickable="true"
        android:onClick="poserPion9" />

</RelativeLayout>
